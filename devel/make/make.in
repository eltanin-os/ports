#!/bin/sh
. ${PORTS}/mk/ingen.sh

srcdir="."
outdir="."

cflags=` cat <<-EOF
	\$cflags
	-DHAVE_CONFIG_H
	-DINCLUDEDIR=\"${PREFIX}${INCDIR}\"
	-DLIBDIR=\"${PREFIX}${LIBDIR}\"
	-DLOCALEDIR=\"${PREFIX}/share/locale\"
	-I.
	-Iglob
EOF
`

binaries=` cat <<-EOF
	make
EOF
`

makeobjs=` cat <<-EOF
	ar.c
	arscan.c
	commands.c
	default.c
	dir.c
	expand.c
	file.c
	function.c
	getopt.c
	getopt1.c
	guile.c
	implicit.c
	job.c
	load.c
	loadapi.c
	main.c
	misc.c
	posixos.c
	output.c
	read.c
	remake.c
	rule.c
	signame.c
	strcache.c
	variable.c
	version.c
	vpath.c
	hash.c
	remote-stub.c
EOF
`

ldlibs=` cat <<-EOF
	libglob.a
EOF
`

libraries=` cat <<-EOF
	libglob.a
EOF
`

libglob=` cat <<-EOF
	glob/glob.c
	glob/fnmatch.c
EOF
`

manpages=` cat <<-EOF
	make.1
EOF
`

auto
lib  libglob.a $libglob
bin  make      $makeobjs
mans $manpages
