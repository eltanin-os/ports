	libpkgconf/client.c
	libpkgconf/dependency.c
	libpkgconf/fileio.c
	libpkgconf/fragment.c
	libpkgconf/path.c
	libpkgconf/pkg.c
	libpkgconf/queue.c
	libpkgconf/tuple.c

bin:pkgconf
	getopt_long.c
	main.c
