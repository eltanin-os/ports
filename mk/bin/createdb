#!/bin/rc -e
# $1: file
if (! test -s $1) exit 0
# header
size=`{$PORTS/mk/bin/install -n <$1}
tmp=`{mktemp}
cat <<EOF >$tmp
name:$name
version:$version
license:$license
description:$description
size:$size
EOF
# vars
SYSDBDIR=$SYSPATH$DBDIR
# separate deps
# XXX: maybe use ldd to be sure (for now this is a heuristic)
makedeps=()
for (dep in $mdeps) {
	d=$dep'-dynlib'
	v=''
	if (test -e $SYSDBDIR/$d) v=`{$SED -n 's/version://p' $SYSDBDIR/$d}
	if (test -e $PORTSYS_DBDIR/$d) v=`{$SED -n 's/version://p' $PORTSYS_DBDIR/$d}
	if (test -n $v) rdeps=($rdeps $d'#'$v)
	if not makedeps=($makedeps $dep)
}
# rdeps
if (! ~ $#rdeps 0) {
	echo 'rdeps{'
	printf '\t%s\n' $rdeps
	echo '}'
} >> $tmp
# mdeps
if (! ~ $#makedeps 0) {
	echo 'mdeps{'
	for (dep in $makedeps) {
		d=$dep'-dev'
		if (test -e $SYSDBDIR/$d) v=`{$SED -n 's/version://p' $SYSDBDIR/$d}
		if not v=`{$SED -n 's/version://p' $PORTSYS_DBDIR/$d}
		dep=$d'#'$v
		printf '\t%s\n' $dep
	}
	echo '}'
} >> $tmp
# files
{
echo 'files{'
xargs venus-cksum <$1 | sed 's;^;	;g'
echo '}'
} >> $tmp
# gen
target=$"name
mv $tmp $PORTSYS_DBDIR/$target
