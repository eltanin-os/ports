#!/bin/rc
#
. $PORTS/mk/meth/cfg.rc

dir=$"PORTSYS_TMP_BUILDDIR
mkdir $dir
cd $dir

flags=()
if ($static) {
	flags=(-D BUILD_SHARED_LIBS'='OFF -D LIBTYPE'='STATIC)
}; if not {
	flags=(-D BUILD_SHARED_LIBS'='ON)
}

switch ($_L) {
case *'-O3'*
	flags=($flags -DCMAKE_BUILD_TYPE'='Release)
case *'-O2'*
	flags=($flags -DCMAKE_BUILD_TYPE'='MinSizeRel)
case *'-Os'*
	flags=($flags -DCMAKE_BUILD_TYPE'='MinSizeRel)
}

if (! test -n $"PREFIX) PREFIX='/'
env -i -- $PORTSYS_METH_ENV                \
    cmake                                  \
    -GNinja                                \
    -DCMAKE_INSTALL_PREFIX'='$"PREFIX      \
    -DCMAKE_INSTALL_BINDIR'='$"BINDIR      \
    -DCMAKE_INSTALL_SBINDIR'='$"BINDIR     \
    -DCMAKE_INSTALL_SYSCONFDIR'='$"ETCDIR  \
    -DCMAKE_INSTALL_LIBDIR'='$"LIBDIR      \
    -DCMAKE_INSTALL_INCLUDEDIR'='$"INCDIR  \
    -DCMAKE_INSTALL_DATAROOTDIR'='$"DRTDIR \
    -DCMAKE_INSTALL_MANDIR'='$"MANDIR      \
    $flags                                 \
    $PORTSYS_METH_FLAGS                    \
    ..
args=()
if (! ~ $#* 0) args=(--target $*)
cmake --build . $args
