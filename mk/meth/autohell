#!/bin/rc
if (test -z $CONFIGURE) CONFIGURE='./configure'
OBDIR=true

switch ($PORTSYS_MK_FLAGS) {
case *'nobuilddir'*
	OBDIR=false
}

if ($OBDIR) {
	dir=$"PORTSYS_TMP_BUILDDIR
	mkdir $dir >[2]/dev/null ||;
	cd $dir
	CONFIGURE='../'$CONFIGURE
}

_static=$static
if ($static) {
	static=yes
	shared=no
}; if not {
	static=no
	shared=yes
}

if (! test -f AUTOHELL@DONE) @{
	if (! test -n $"PREFIX) PREFIX='/'
	chmod +x $CONFIGURE
	enable_option_checking=no
	$CONFIGURE                     \
	    --prefix'='$PREFIX         \
	    --bindir'='$BINDIR         \
	    --sbindir'='$BINDIR        \
	    --libdir'='$LIBDIR         \
	    --includedir'='$INCDIR     \
	    --oldincludedir'='$INCDIR  \
	    --datarootdir'='$DRTDIR    \
	    --mandir'='$MANDIR         \
	    --enable-shared'='$shared  \
	    --enable-static'='$static  \
	    $PORTSYS_METH_FLAGS
	touch AUTOHELL@DONE
}
if (~ $#* 0) exit 0
if ($_static) LDFLAGS'='$"LDFLAGS' -all-static'
PORTSYS_MK_FLAGS=($PORTSYS_MK_FLAGS nopath)
exec $PORTS/mk/meth/make $*
