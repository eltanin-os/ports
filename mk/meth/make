#!/bin/rc
VG=(                       \
    AR'='$AR               \
    CC'='$CC               \
    CXX'='$CXX             \
    YACC'='$YACC           \
    STRIP'='$STRIP         \
    RANLIB'='$RANLIB       \
)

_MAKE='make'
if (test -n $LIBTOOL) {
	VG=($VG LIBTOOL'='$"LIBTOOL)
	_MAKE='make LIBTOOL='$"LIBTOOL
}

VP=(                       \
    PREFIX'='$PREFIX       \
    BINDIR'='$BINDIR       \
    LIBDIR'='$LIBDIR       \
    ETCDIR'='$ETCDIR       \
    DFLDIR'='$DFLDIR       \
    MANDIR'='$MANDIR       \
    INCDIR'='$INCDIR       \
)

for (flag in $PORTSYS_MK_FLAGS) {
	switch ($flag) {
	case 'nopath'
		VP=()
	case 'replace'
		A=(CFLAGS'='$"CFLAGS CPPFLAGS'='$"CPPFLAGS LDFLAGS'='$"LDFLAGS)
		PORTSYS_METH_FLAGS=($PORTSYS_METH_FLAGS $A)
	}
}

exec make -j $nprocs \
    $VG \
    $VP \
    DESTDIR'='$DESTDIR \
    LIBTOOL'='$LIBTOOL \
    MAKE'='$_MAKE \
    $PORTSYS_METH_FLAGS \
    $*
