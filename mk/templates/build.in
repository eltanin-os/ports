#!/bin/sh
. ${PORTS}/mk/ingen.sh

srcdir="."
outdir="."

# "$binaries", "$libraries" and "$manpages" are variables
# that define what will be installed

# if necessary add here additional
# flags (c, cpp, ld)
cflags=` cat <<-EOF
	\$cflags
	#cflags
EOF
`

cppflags=` cat <<-EOF
	\$cppflags
	#cppflags
EOF
`

ldflags=` cat <<-EOF
	\$ldflags
	#ldflags
EOF
`

binaries=` cat <<-EOF
	#binaries
EOF
`

# Prefer an internal library if the binaries share the same objects
# "$biname"objs
binnameobjs=` cat <<-EOF
	#cfiles
EOF
`

# Libraries listed here will make the compiler try to link
# it in every binary.
ldlibs=` cat <<-EOF
	#ldlibs
EOF
`

libraries=` cat <<-EOF
	#libraries
EOF
`

# Create one for each library
# "$libname"
libname=` cat <<-EOF
	#cfiles
EOF
`

manpages=` cat <<-EOF
	#manpages
EOF
`

# Rules
# always call 'auto' first
auto
sets
copy
lib
bin
bins
objs
mbin
mans
