[vars]
name=mdevd
version=0.1.1.1
license=ISC
description=A mdev-compatible hotplug manager daemon.
cksum=815a15456cbf041210e3a5b7134dda39d1120a312e062d8779e46736a8b614e0d17d7a4fcab2a99ee15672aa8de04185d4004ac4d3db77974a77b1b79e740040

[mirrors]
https://skarnet.org/software/mdevd/mdevd-$version.tar.gz

[mdeps]
libc
skalibs

[build]
SYSDEPSPATH=$"PORTSYS_SYSPATH/lib/skalibs/sysdeps
if (! test -e $"SYSDEPSPATH) SYSDEPSPATH=$"PORTSYS_ROOTPWD/lib/skalibs/sysdeps
portsys_mk_meth autohell nobuilddir
portsys_mk_setflags --with-sysdeps=$"SYSDEPSPATH
portsys_mk_exec

[install]
portsys_mk_exec install
