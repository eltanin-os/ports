[vars]
name=libnl-tiny
version=1.0.1
license=LGPL-2
description=A tiny replacement for libnl.

[mirrors]
git://github.com/sabotage-linux/libnl-tiny

[mdeps]
libc

[build]
sed 's/\/libnl-tiny\/%/\/%/g' Makefile 1> Makefile.new
mv Makefile.new Makefile
${PORTS}/mk/portsys_mk_make.sh ALL_LIBS=libnl-tiny.a all

[install]
${PORTS}/mk/portsys_mk_make.sh prefix="$PREFIX" libdir="$LIBDIR" \
includedir="$INCDIR" ALL_LIBS=libnl-tiny.a install
