[vars]
name=libnl-tiny
version=1.0.1
license=LGPL-2
description=A tiny replacement for libnl.

[mirrors]
git://github.com/sabotage-linux/libnl-tiny.git

[mdeps]
libc

[build]
portsys_hlp_sed Makefile\
    -e 's/\/libnl-tiny\/%/\/%/g'\
    -e 's/prefix/PREFIX/g'\
    -e 's/libdir/LIBDIR/g'\
    -e 's/includedir/INCDIR/g'
portsys_mk_meth make
portsys_mk_setflags ALL_LIBS=libnl-tiny.a
portsys_mk_exec all

[install]
portsys_mk_exec install
