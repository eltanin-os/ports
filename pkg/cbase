[vars]
name=cbase
version=master
license=multiple
description=A complementary set of unix utilities for utilchest.

[mirrors]
git://github.com/eltanin-os/cbase.git

[mdeps]
libc
ncurses

[build]
portsys_mk_meth make replace
portsys_mk_setflags MORELD=-lterminfo TABSLD=-lterminfo
portsys_mk_exec

[install]
portsys_mk_exec install
portsys_mk_exec install-man
