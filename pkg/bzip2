[vars]
name=bzip2
version=1.0.6
license=custom
description=A high-quality data compressor.

[mirrors]
git://github.com/eadwardus/bzip2

[mdeps]
libc

[build]
portsys_hlp_sed Makefile\
    -e 's/$(PREFIX)/$(DESTDIR)$(PREFIX)/g'\
    -e 's/$(PREFIX)\/man/$(PREFIX)\/share\/man/g'
portsys_mk_meth make
portsys_mk_exec

[install]
portsys_mk_exec install
