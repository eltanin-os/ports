[vars]
name=ncurses
version=0.3.1
license=BSD-3
description=A NetBSD curses library.
cksum=3eace58e3a9adaf214000a29a155bed76af426d11ea025cfc173a8fe74887ab694196d4881c6ecde4c10915e4d62ff6f43ac61fca7d1127fbdcd95c9d5cdf94b
src=netbsd-curses-$version

[mirrors]
http://ftp.barfooze.de/pub/sabotage/tarballs/netbsd-curses-$version.tar.xz

[mdeps]
libc

[build]
portsys_hlp_sed GNUmakefile 's/INSTALL ?=/INSTALL =/'
portsys_mk_meth make
portsys_mk_exec all-static

[install]
portsys_mk_exec install-static
ln -s . $DESTDIR$INCDIR/ncursesw
