[vars]
name=ncurses
version=0.3.1
license=BSD-3
description=A NetBSD curses library.
cksum=c6b6a0e897c6fc17268b7669f14792a8cbfe2ec94def9189069de5d706b0ef5df8024764ad00b6c2cbf2c6d096ffdbce36b0f6b87da2ee30158eb165e34e2f2e
src=netbsd-curses-$version

[mirrors]
http://ftp.barfooze.de/pub/sabotage/tarballs/netbsd-curses-$version.tar.xz

[mdeps]
libc

[build]
mhsed GNUmakefile 's/INSTALL ?=/INSTALL =/'
mkmeth make
mkexec all-static

[install]
mkexec install-static
mhinstall inc -l . ncursesw
